<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ListItemImage" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">@dimen/ListItemImageSize</item>
        <item name="android:layout_height">@dimen/ListItemImageSize</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListItemAuthorPubTime" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:textSize">@dimen/ListItemAuthorPubTimeTextSize</item>
    </style>

    <style name="ListItemTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:textSize">@dimen/ListItemTitleTextSize</item>
        <item name="android:layout_marginLeft">63dp</item>
        <item name="android:layout_marginStart">63dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
